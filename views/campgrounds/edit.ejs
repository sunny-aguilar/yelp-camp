

<h1>Edit Campground</h1>
<form class="form-group" action="/campgrounds/<%= campground._id %>/edit?_method=PUT" method="POST">
    <div class="form-group">
        <input class="form-control form-control-lg" type="text" name="name" placeholder="campground name" required>
    </div>
    <div class="form-group">
        <input class="form-control form-control-lg" type="text" name="image" placeholder="image URL" required>
    </div>
    <div class="form-group">
        <input class="form-control form-control-lg" type="text" name="description" placeholder="description" required>
    </div>
    <div class="form-group">
        <button class="btn btn-primary btn-lg btn-block">Submit</button>
    </div>
</form>